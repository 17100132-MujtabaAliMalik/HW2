-# edit.html.haml using partial

%h1 Update Existing Movie

= form_tag movies_update3_path(@movie), :method => :post do

  = label :movie, :title, 'Old Title' 
  = text_field :movie1, 'title'
  
  = label :movie, :title, 'New Title'
  = text_field :movie, 'title'

  = label :movie, :rating, 'New Rating'
  = select :movie, :rating, ['G','PG','PG-13','R','NC-17']

  = label :movie, :release_date, 'New Released On'
  = date_select :movie, :release_date

  = submit_tag 'Update Movie Info'
